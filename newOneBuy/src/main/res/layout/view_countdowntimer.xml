<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_hour_decade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_hour_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_hour_decade"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_hour_decade"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_maohao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_hour_unit"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/tv_hour_unit"
            android:background="@color/white"
            android:padding="1dp"
            android:text=":"
            android:textColor="@color/onebuy" />

        <TextView
            android:id="@+id/tv_min_decade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_maohao1"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/text_maohao1"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_min_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_min_decade"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_min_decade"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_maohao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_min_unit"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/tv_min_unit"
            android:background="@color/white"
            android:padding="1dp"
            android:text=":"
            android:textColor="@color/onebuy" />

        <TextView
            android:id="@+id/tv_sec_decade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_maohao2"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@+id/text_maohao2"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_sec_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_sec_decade"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_sec_decade"
            android:background="@drawable/color_text_time"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:text="0"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>