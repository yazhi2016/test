<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="1dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rela_left_allproact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1.5dp"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:background="@drawable/shape_strokegray_white"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/ima_gvitem_homefra"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="1dp"
            android:scaleType="centerInside"
            android:src="@drawable/noima" />

        <TextView
            android:id="@+id/text_name_gvitem_homefra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignRight="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/ima_gvitem_homefra"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="(第 期)"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/text_name_gvitem_homefra" >

            <ImageView
                android:id="@+id/ima_addtoshopcar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/add_to_shopcar"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/progressbar_allproduct"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="9dp"
                android:layout_toLeftOf="@+id/ima_addtoshopcar"
                android:background="@drawable/shape_corner_gray_progress"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_horizontal" />

            <TextView
                android:id="@+id/text_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/progressbar_allproduct"
                android:layout_below="@+id/progressbar_allproduct"
                android:text="开奖进度 "
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <TextView
                android:id="@+id/text_surplus_allprodect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_pro"
                android:layout_alignRight="@+id/progressbar_allproduct"
                android:layout_toLeftOf="@+id/ima_addtoshopcar"
                android:text="0%"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_below="@+id/text_pro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_corner_red_gray"
                android:gravity="center"
                android:text="立刻抢购"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ima_tagten_homefra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/tentag"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ima_taghundred_homefra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/hundredtag"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_nothing_allproductact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/white"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_hasthing_allproductact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-1.5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_strokegray_white"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="-1.5dp"
        android:paddingRight="15dp" >

        <ImageView
            android:id="@+id/ima_gvitem_homefra2"
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="130dp"
            android:scaleType="centerInside"
            android:src="@drawable/noima" />

        <TextView
            android:id="@+id/text_name_gvitem_homefra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignRight="@+id/ima_gvitem_homefra2"
            android:layout_below="@+id/ima_gvitem_homefra2"
            android:layout_centerHorizontal="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="（第 期）"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_below="@+id/text_name_gvitem_homefra2" >

            <ImageView
                android:id="@+id/ima_addtoshopcar2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/add_to_shopcar"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_surplus_gvitem_homefra2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ima_addtoshopcar2"
                android:text=""
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <ProgressBar
                android:id="@+id/progressbar_allproduct2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="9dp"
                android:layout_toLeftOf="@+id/ima_addtoshopcar2"
                android:background="@drawable/shape_corner_gray_progress"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_horizontal" />

            <TextView
                android:id="@+id/text_pro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/progressbar_allproduct2"
                android:layout_below="@+id/progressbar_allproduct2"
                android:text="开奖进度 "
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <TextView
                android:id="@+id/progress_now2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_pro2"
                android:layout_alignBottom="@+id/text_pro2"
                android:layout_alignRight="@+id/progressbar_allproduct2"
                android:text=""
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <TextView
                android:id="@+id/text_surplus_allprodect2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_pro2"
                android:layout_alignRight="@+id/progress_now2"
                android:text="0%"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <Button
                android:id="@+id/btn_zero2"
                android:layout_width="80dp"
                android:layout_height="18dp"
                android:layout_below="@+id/text_pro2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_corner_red_gray"
                android:gravity="center"
                android:text="立刻抢购"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ima_tagten_homefra2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/tentag"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ima_taghundred_homefra2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/hundredtag"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>