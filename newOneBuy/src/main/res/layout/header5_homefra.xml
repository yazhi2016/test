<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:layout_weight="1"
        android:paddingRight="8dp" >

        <ImageView
            android:id="@+id/ima_gvitem_homefra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/white" />

        <TextView
            android:id="@+id/text_name_gvitem_homefra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignRight="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/ima_gvitem_homefra"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textSize="@dimen/size_text_header5"
            android:text="（第5200期）思锐A1005+Y10三" />

        <TextView
            android:id="@+id/text_allneed_gvitem_homefra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/text_name_gvitem_homefra"
            android:textSize="@dimen/size_text_header5"
            android:text="总需52033" />
        
        <TextView
            android:id="@+id/text_surplus_gvitem_homefra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ima_gvitem_homefra"
            android:textSize="@dimen/size_text_header5"
            android:layout_below="@+id/text_name_gvitem_homefra"
            android:text="剩余235" />

        <ProgressBar
            android:id="@+id/progressbar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:progressDrawable="@drawable/progress_horizontal"
            android:layout_below="@+id/text_allneed_gvitem_homefra"
            android:layout_alignRight="@+id/ima_gvitem_homefra"
            android:layout_alignLeft="@+id/ima_gvitem_homefra" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressbar1"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:textColor="@color/onebuy"
            android:textSize="@dimen/size_text_header5"
            android:text="开奖进度" />

        <TextView
            android:id="@+id/progress_now1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/text_name_gvitem_homefra"
            android:textColor="@color/onebuy"
            android:textSize="@dimen/size_text_header5"
            android:text="剩余235" />

