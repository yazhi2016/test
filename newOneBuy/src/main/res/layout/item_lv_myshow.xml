<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rela_winner_myshowact"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white"
        android:paddingBottom="10dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ima_winner_myshowact"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/noima" />

        <TextView
            android:id="@+id/text_name_myshowact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ima_winner_myshowact"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ima_winner_myshowact"
            android:text="第一期"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_text_myshowact"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_name_myshowact"
            android:layout_above="@+id/textView23"
            android:layout_below="@+id/text_name_myshowact"
            android:maxLines="2"
            android:text="" />


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_name_myshowact"
            android:layout_alignBottom="@+id/ima_winner_myshowact"
            android:text="揭晓时间：" />

        <TextView
            android:id="@+id/text_time_myshowact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView23"
            android:layout_toRightOf="@+id/textView23"
            android:singleLine="true"
            android:text="2015-1-1" />
    </RelativeLayout>

</RelativeLayout>