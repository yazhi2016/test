<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="15dip"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/text_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="15dip"
            android:text="扬州慢"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/text_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_address_name"
            android:layout_alignBottom="@+id/text_address_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="18811112222"
            android:textSize="17sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/text_address_phone"
            android:layout_alignLeft="@+id/text_address_name"
            android:gravity="right"
            android:singleLine="true"
            android:layout_below="@+id/text_address_phone"
            android:layout_marginTop="8dip"
            android:text="福建省厦门市思明区望海路67号2105"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_alwaysthis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_address_name"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="5dip"
            android:paddingLeft="1dip"
            android:visibility="invisible"
            android:paddingRight="1dip"
            android:layout_toRightOf="@+id/text_address_name"
            android:background="@color/onebuy"
            android:text="默认地址"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>