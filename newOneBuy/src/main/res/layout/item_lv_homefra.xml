<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rela_one_item_homefra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-1.5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_strokegray_white"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" >

        <ImageView
            android:id="@+id/ima_gvitem_homefra"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/noima" />

        <TextView
            android:id="@+id/text_name_gvitem_homefra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignRight="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/ima_gvitem_homefra"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_below="@+id/text_name_gvitem_homefra" >

            <ImageView
                android:id="@+id/ima_addtoshopcar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/add_to_shopcar" />

            <ProgressBar
                android:id="@+id/progressbar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/ima_addtoshopcar"
                android:background="@drawable/shape_corner_gray_progress"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_horizontal" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/progressbar1"
                android:layout_below="@+id/progressbar1"
                android:text="开奖进度"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <TextView
                android:id="@+id/progress_now1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignRight="@+id/progressbar1"
                android:text="0%"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ima_tagten_homefra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/tentag"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ima_taghundred_homefra"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/hundredtag"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="18sp"
        android:text="该地区无推荐商品"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rela_nothing_item_homefra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:visibility="gone" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_two_item_homefra"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-1.5dp"
        android:layout_marginTop="-1.5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_strokegray_white"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ima_gvitem_homefra2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/noima" />

        <TextView
            android:id="@+id/text_name_gvitem_homefra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignRight="@+id/ima_gvitem_homefra2"
            android:layout_below="@+id/ima_gvitem_homefra2"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:text=" "
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_below="@+id/text_name_gvitem_homefra2" >

            <ImageView
                android:id="@+id/ima_addtoshopcar2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/add_to_shopcar" />

            <ProgressBar
                android:id="@+id/progressbar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/ima_addtoshopcar2"
                android:background="@drawable/shape_corner_gray_progress"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_horizontal" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/progressbar2"
                android:layout_below="@+id/progressbar2"
                android:text="开奖进度"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />

            <TextView
                android:id="@+id/progress_now2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignRight="@+id/progressbar2"
                android:text="0%"
                android:textColor="@color/onebuy"
                android:textSize="@dimen/size_text_lvitem_homefra" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ima_tagten_homefra2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/tentag"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ima_taghundred_homefra2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/ima_gvitem_homefra2"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/hundredtag"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>